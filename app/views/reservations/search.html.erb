<h2 class="text-center mt-8 mb-6 text-xl font-bold">
  ご予約の確認
</h2>

<%= form_with url: lookup_reservations_path, local: true do |f| %>
  <div class="mb-4 text-center">
    <label class="block mb-2">電話番号</label>
    <%= f.text_field :phone_number, class: "border px-3 py-2" %>
  </div>

  <div class="text-center">
    <%= f.submit "確認する",
      class: "bg-orange-100 hover:bg-orange-400 font-bold py-2 px-6 rounded border-2 border-orange-200" %>
  </div>

  <div class="text-center mt-6">
    <%= link_to "トップへ戻る",
      root_path,
      class: "bg-gray-200 hover:bg-gray-400 font-bold py-2 px-6 rounded border-2 border-gray-300 inline-block" %>
  </div>
<% end %>